{
	"lwc": {
		"modules": [{ "dir": "$rootDir/src/modules" }]
	},
	"routes": [
		{
			"id": "base",
			"path": "/",
			"rootComponent": "base/app"
		}
	],
	"assets": [
		{
			"alias": "assetsDir",
			"dir": "$rootDir/src/assets",
			"urlPath": "/public/assets"
		},
		{
			"alias": "favicon",
			"file": "$rootDir/src/assets/favicon.ico",
			"urlPath": "/favicon.ico"
		}
	]
}
